KISSY.add("components/popup-region/index",function(a,b,c,d){function e(a){var b=this;e.superclass.constructor.call(b,a),b._init()}var f=b.all;return f(".label-region").on("click",function(a){var b=f(".location"),c=f(a.currentTarget),d=f(".panel-region",b),e=f(".arrow",c);return b.hasClass("popup-region-active")?(b.removeClass(".popup-region-active"),d.hide(),void e.removeClass(".arrow-up").addClass(".arrow-down")):(b.addClass(".popup-region-active"),void d.fadeIn(.3,function(){e.removeClass(".arrow-down").addClass(".arrow-up")}))}),a.one("#J_city_tab").one(".city-tab-content").delegate("mouseenter","a",function(b){a.one(b.currentTarget).addClass("hover")}).delegate("mouseleave","a",function(b){a.one(b.currentTarget).removeClass("hover")}),f(".location").on("mouseleave",function(){var a=f(".location"),b=f(".label-region",a),c=f(".panel-region",a),d=f(".arrow",b);c.fadeOut(.3,function(){a.removeClass(".popup-region-active"),d.removeClass(".arrow-up").addClass(".arrow-down")})}),a.extend(e,c,{_init:function(){new d("J_city_tab",{eventType:"click",navClass:"city-tab-nav",triggerSelector:".tab-label",selectedClass:"cur",contentClass:"city-tab-content",pannelClass:"city-tab-panel"})}},{ATTRS:{}}),e},{requires:["node","base","gallery/slide/1.2/","./index.css"]});